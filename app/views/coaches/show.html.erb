          <div class="card-title-coach">
          <div>
          <h3 class="pt-2">Avis</h3>
          <div class="colorbar"></div>
          </div>
          <div>
          <div class="text-center pt-2">
            <% unless @user.review_ids.empty? %>
              <% nb_stars = @user.rating_average.round.to_i %>
              <% nb_stars.times do %>
                <span style="color: #9FD2D6"><i class="fas fa-star"></i></span>
              <% end %>
              <% (5 - nb_stars).times do %>
                <span style="color: #9FD2D6"><i class="far fa-star"></i></span>
              <% end %>
              <p class="text-center"><%= @user.reviews.count %> avis</p>
            <% end %>
          </div>
          </div>
          </div>
          <br>
          <p><% @user.reviews.each do |review| %></p>
          <% nb_stars = review.rating %>
              <% nb_stars.times do %>
                <span style="color: #9FD2D6"><i class="fas fa-star"></i></span>
              <% end %>
              <% (5 - nb_stars).times do %>
                <span style="color: #9FD2D6"><i class="far fa-star"></i></span>
              <% end %>
              <br>
          <p><%= review.content  %></p>
          <br>
          <br>
          <% end %>
