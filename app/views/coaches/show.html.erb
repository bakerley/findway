
<%= content_for(:navbar_class, "navbar-home") %>
<div class="flex-container fond-show">
  <div class="coach-show">
    <div class="coach-main">
      <div class="coach-info mt-3">
        <div class="row no-gutters">
          <div class="avatar-card">
            <img src="<%= @user.avatar %>" class="avatar avatar-large avatar-index" alt="Avatar">
          </div>
          <div class="col-md-8">
            <div class="card-body info-metier">
              <div>
              <h4><%= @user.firstname %></h4>
              <div class="colorbar"></div>
              <p class="card-font">SPECIALISATION</p>
              <p class="font-helve"><%= @user.speciality.capitalize %></p>
              </div>
              <div>
                <p class="card-font">TARIF HORAIRE</p>
                <p class="font-helve"><%= humanized_money_with_symbol(@user.hourly_price) %></p>
                <p class="card-font">EXPERTISE SECTORIELLE</p>
                <p class="font-helve"><%= @user.business_expertise.capitalize %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="card-coach mt-3">
          <h3 class="pt-2">Description</h3>
          <div class="colorbar"></div>
          <br>
          <p><%= @user.description %></p>
        </div>
      </div>
      <div class="card-day mt-3">
        <div class="card-coach mt-1">
          <h3 class="pt-2">CV</h3>
          <div class="colorbar"></div>
          <br>
          <p><%= @user.linkedin  %></p>
        </div>
      </div>
      <div class="card-day mt-3">
        <div class="card-coach mt-1">
          <div class="card-title-coach">
          <div>
          <h3 class="pt-2">Avis</h3>
          <div class="colorbar"></div>
          </div>
          <div>
          <div class="text-center pt-2">
            <% unless @user.review_ids.empty? %>
              <% nb_stars = @user.rating_average.round.to_i %>
              <% nb_stars.times do %>
                <span style="color: #2F2FA2"><i class="fas fa-star"></i></span>
              <% end %>
              <% (5 - nb_stars).times do %>
                <span style="color: #2F2FA2"><i class="far fa-star"></i></span>
              <% end %>
              <p class="text-center"><%= @user.reviews.count %> avis</p>
            <% end %>
          </div>
          </div>
          </div>
          <br>
          <p><% @reviews.each do |review| %></p>
          <% nb_stars = review.rating %>
              <% nb_stars.times do %>
                <span style="color: #2F2FA2"><i class="fas fa-star"></i></span>
              <% end %>
              <% (5 - nb_stars).times do %>
                <span style="color: #2F2FA2"><i class="far fa-star"></i></span>
              <% end %>
              <br>
          <p><%= review.content  %></p>
          <br>
          <br>
          <% end %>
        </div>
      </div>
    </div>
    <div class="sticky">
    <div class="coach-right mt-3">
      <div style="width: 18rem;">
<!--         <div id="calendar-visitor">
        </div> -->
        <div id="next-dispo">
          <div class="card-day mt-3 text-center p-4">
            <div class="slot-coach">
              <h3>Prochain cr√©neau</h3>
              <p><i class="fas fa-calendar-day"></i>   <%= @next_slot.french_date  %> </p>
              <p><i class="far fa-clock"></i>   <%= @next_slot.time_slot  %> </p>
              <p><i class="fas fa-euro-sign"></i>  <%= @next_slot.amount_cents.fdiv(100)  %></p>
            </div>
            <div class="card-body">
              <a class="btn btn-lg btn-primary" href="<%= "/coaches/#{@user.id}/book" %>">Prendre rendez-vous</a>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
    </div>
  </div>
</div>
